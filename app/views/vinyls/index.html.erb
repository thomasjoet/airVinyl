 <%= render "searchbar" %>

<div class="container">
  <div class="row">

    <div class="col-xs-12 col-sm-8">
      <div class="row">
        <% @vinyls.each do |vinyl| %>
          <div class="col-xs-12 col-sm-4">
            <%= render "card", vinyl: vinyl %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4">
      </br>
      <p class= "text-center">map here!</p>
    </div>

  </div>
</div>
