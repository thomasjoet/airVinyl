<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <div class="row">
        <div class="col-xs-3">
          <%= image_tag @vinyl.picture.url(:medium), class: "image-container" %>
        </div>
        <div class="col-xs-9">
          <h3>Artist: <%= @vinyl.artist %></h3>
          <h3>Title: <%= @vinyl.title %></h3>
          <p><%= @vinyl.genre %></p>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-xs-12">
          <h2>Tracks</h2>
          <% @tracks.each do |track| %>
            <%= render 'tracks', tracks: track %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div>
        <h4><%= link_to current_user.name, user_path(current_user) %></h4>
        <%= image_tag current_user.picture, class: "avatar-large" %>
      </div>
      <div>
        <div class="panel">
          <div class="text-center">
            <p>Xâ‚¬ / j</p>
          </div>
          <div>
            <%= link_to 'Request a vinyl', vinyl_bookings_path(@vinyl), class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
