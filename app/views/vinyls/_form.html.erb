<%= simple_form_for(@vinyl) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :artist %>
    <%= f.input :price %>
    <%= f.input :genre %>
    <%= f.input :picture %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"  %>
  </div>
<% end %>
